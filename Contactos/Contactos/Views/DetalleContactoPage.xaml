<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contactos.Views.DetalleContactoPage">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image  Source="{Binding Imagen}" Grid.Row="0" Grid.ColumnSpan="2" VerticalOptions="Center"/>

        <Label Text="Nombre:" Grid.Column="0" Grid.Row="1" />
        <Label Text="{Binding Nombres}" Grid.Column="1" Grid.Row="1" />
        <Label Text="Telefono:" Grid.Column="0" Grid.Row="2" />
        <Label Text="{Binding Telefono}" Grid.Column="1" Grid.Row="2" />
        <Label Text="Direccion:" Grid.Column="0" Grid.Row="3" />
        <Label Text="{Binding Direccion}" Grid.Column="1" Grid.Row="3" />

        <Button Text="Llamar" Grid.Row="4" Grid.ColumnSpan="2"/>



    </Grid>
</ContentPage>